

# SerpAPI Key (for web search)
# Get yours at: https://serpapi.com/manage-api-key
SERPAPI_KEY=your-serpapi-key-here

# Optional: Set to 'development' or 'production'
ENVIRONMENT=development

# GROQ / OpenAI-compatible API key (used by the app to talk to Groq)
# Example: GROQ_API_KEY=gsk_xxx
GROQ_API_KEY=your_groq_api_key_here

# SerpAPI key used for web search
# Example: SERPAPI_KEY=ABCD1234
SERPAPI_KEY=your_serpapi_key_here

# MongoDB connection string (optional). If omitted the app will use in-memory history only.
# Example (Mongo Atlas): mongodb+srv://<user>:<pass>@cluster0.abcd.mongodb.net/research_assistant?retryWrites=true&w=majority
MONGO_URI=your_mongo_connection_string_here


# Example: GROQ_MODEL=mixtral-8x7b-32768
GROQ_MODEL=

# Port for local dev (uvicorn will use this if not overridden)
PORT=8000

# Debug flag for local development
DEBUG=true
